CREATE TABLE EMPLEADO (ID_EMPLEADO INTEGER, 
NOMBRE_EMPLEADO VARCHAR2(30), 
SUELDO_BASE FLOAT, 
FECHA_CONTRATACION DATE, 
CONSTRAINT PK_ID_EMPLEADO PRIMARY KEY (ID_EMPLEADO)
);

--ACTIVAR MODO SERVIDOR DE DEPURACION
SET SERVEROUTPUT ON;


DECLARE
MY_FECHA DATE;
BEGIN
MY_FECHA:=TO_DATE('02-MAY-2016','DD-MON-YYYY');
INSERT INTO EMPLEADO VALUES(5,'JUAN',250,MY_FECHA);
DBMS_OUTPUT.PUT_LINE('SE GUARDO TU REG CON EXITO');
EXCEPTION
WHEN OTHERS 
THEN
DBMS_OUTPUT.PUT_LINE('LO SIENTO METISTE LA PATA ');
END;
--CERRAMOS EL BLOQUE PLSQL
/
SELECT * FROM EMPLEADO;

/*
VEREMOS UN NUEVO OBJETO DE BD  QUE SE LLAMA PROCEDIMIENTO ALMACENADO
ESTO SI SE GUARDA EN LA BD Y PUEDE SER INVOCADO REMOTAMENTE
EN CASO CONTRARIO LOS BLOQUES PLSQL NO SE ALMACENAN EN LA BD SOLO SE EJECUTAN
*/

BEGIN
SUMA(5,4);
END;
/



